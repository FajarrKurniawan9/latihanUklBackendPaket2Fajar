generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  password  String
  role      String // "admin" atau "user"
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  borrows Borrow[]

  @@map("users")
}

model Inventory {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  quantity  Int
  condition String // "baik" atau "rusak"
  location  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  borrows Borrow[]

  @@map("inventory")
}

model Borrow {
  id               Int       @id @default(autoincrement())
  userId           Int       @map("user_id")
  inventoryId      Int       @map("inventory_id")
  borrowDate       DateTime  @map("borrow_date")
  returnDate       DateTime  @map("return_date")
  actualReturnDate DateTime? @map("actual_return_date")
  quantity         Int
  status           String // "dipinjam" atau "dikembalikan"
  notes            String?   @db.Text
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  inventory Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@map("borrows")
}
